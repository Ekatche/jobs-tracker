FROM python:3.12-slim

WORKDIR /app

# Installation des d√©pendances syst√®me pour le backend
RUN apt-get update && apt-get install -y \
    wget curl ca-certificates build-essential \
    libpango-1.0-0 libcairo2 libasound2 \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Installation uv
ADD https://astral.sh/uv/install.sh /uv-installer.sh
RUN sh /uv-installer.sh && rm /uv-installer.sh

ENV PATH="/root/.local/bin/:$PATH"

# Configuration uv
ENV PYTHONUNBUFFERED=1
ENV UV_CACHE_DIR=/tmp/uv-cache
ENV UV_LINK_MODE=copy

# ‚úÖ Cr√©er l'environnement virtuel
RUN uv venv

# ‚úÖ Installer les d√©pendances depuis requirements.txt
COPY requirements.txt .
RUN uv pip install -r requirements.txt

# Ajouter .venv au PATH
ENV PATH="/app/.venv/bin:$PATH"

# Setup crawl4ai
RUN echo "üöÄ Setup crawl4ai..." && \
    (crawl4ai-setup && echo "‚úÖ crawl4ai-setup OK") || \
    echo "‚ö†Ô∏è crawl4ai-setup √©chou√©"

RUN playwright install --with-deps chromium


# Copier le code
COPY . .

EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]